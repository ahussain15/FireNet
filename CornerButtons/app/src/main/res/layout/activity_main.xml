<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_b"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/banana">
    </TextView>
    <Button
        android:id="@+id/banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/push"
        android:onClick="push"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tr"
        app:layout_constraintTop_toBottomOf="@id/stat">
    </Button>
    <TextView
        android:id="@+id/tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        app:layout_constraintBottom_toTopOf="@id/br"
        app:layout_constraintLeft_toRightOf="@id/tl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banana" />
    <TextView
        android:id="@+id/tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        app:layout_constraintBottom_toTopOf="@id/bl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tr"
        app:layout_constraintTop_toBottomOf="@id/banana"/>
    <TextView
        android:id="@+id/br"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        app:layout_constraintBottom_toTopOf="@id/skb"
        app:layout_constraintLeft_toRightOf="@id/bl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tr"/>
    <TextView
        android:id="@+id/bl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        app:layout_constraintBottom_toTopOf="@id/skb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/br"
        app:layout_constraintTop_toBottomOf="@id/tl"/>
    <SeekBar
        android:id="@+id/skb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:progress="12"
        android:max="60"
        android:indeterminate="false"
        app:layout_constraintBottom_toTopOf="@id/dir"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/br" />
    <TextView
        android:id="@+id/dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_b"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skb"
        app:layout_constraintBottom_toTopOf="@id/rate">
    </TextView>
    <RatingBar
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dir"
        app:layout_constraintBottom_toBottomOf="parent">
    </RatingBar>

</androidx.constraintlayout.widget.ConstraintLayout>